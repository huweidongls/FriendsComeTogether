<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10px"
    android:elevation="10px"
    android:translationZ="3px"
    android:background="@drawable/bg_white_24px"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            test:radius1="16px"
            android:id="@+id/iv_icon"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_head"
            android:layout_width="100px"
            android:layout_height="100px" />
        <RelativeLayout
            android:id="@+id/rl_level"
            android:layout_marginTop="10px"
            android:layout_alignLeft="@+id/iv_icon"
            android:layout_below="@+id/iv_icon"
            android:background="@drawable/bg_ffac27_10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="12px"
                android:layout_marginLeft="12px"
                android:layout_centerInParent="true"
                android:textColor="@color/black_101010"
                android:text="Lv.1"
                android:lines="1"
                android:textSize="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_guanzhu"
            android:layout_toRightOf="@+id/rl_level"
            android:layout_marginLeft="25px"
            android:layout_below="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_guanzhu"
                android:layout_margin="10px"
                android:src="@mipmap/hert_0324_g"
                android:layout_width="40px"
                android:layout_height="40px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20px"
            android:layout_marginRight="15px"
            android:layout_toRightOf="@+id/rl_guanzhu"
            android:orientation="vertical"
            android:layout_width="40px"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_level"
                android:src="@mipmap/level_qingtong"
                android:layout_width="40px"
                android:layout_height="40px" />
            <TextView
                android:paddingLeft="3px"
                android:layout_below="@+id/iv_level"
                android:layout_marginBottom="15px"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black_101010"
                android:textSize="25px"
                android:ems="1"
                android:text="青铜队长"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:maxLength="5"
            android:ellipsize="middle"
            android:layout_below="@+id/rl_level"
            android:layout_marginTop="5px"
            android:layout_marginLeft="15px"
            android:textColor="@color/black_101010"
            android:textSize="28px"
            android:text="旅游达人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl_top"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginBottom="20px"
        android:layout_alignRight="@+id/rl_top"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/qianming"
            android:layout_width="38px"
            android:layout_height="38px" />
        <TextView
            android:textColor="@color/black_101010"
            android:textSize="25px"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2px"
            android:text="山高人为峰，我就是风！撒旦射点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
