<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="5px"
            android:id="@+id/activity_article_comment_rv_rv_iv_avatar"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:layout_toRightOf="@+id/activity_article_comment_rv_rv_iv_avatar"
            android:layout_margin="2px"
            android:id="@+id/tv_name"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:gravity="center"
            android:id="@+id/btn_delete"
            android:textSize="28px"
            android:textColor="@color/red_d84c37"
            android:text="删除"
            android:layout_width="100px"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="2px"
        android:layout_marginBottom="2px"
        android:layout_marginRight="5px"
        android:layout_marginLeft="55px"
        android:id="@+id/activity_article_comment_rv_rv_tv"
        android:textSize="27px"
        android:textColor="@color/black_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
