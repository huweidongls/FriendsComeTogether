<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.pages.ApplyActivity">

    <RelativeLayout
        android:id="@+id/activity_apply_rl_top"
        style="@style/rl_top_bar">

        <TextView
            style="@style/tv_top_title"
            android:text="报名" />

        <RelativeLayout
            android:id="@+id/activity_apply_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/apply_btn"
        android:layout_below="@+id/activity_apply_rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="姓         名:"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/apply_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:inputType="textPersonName"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系方式:"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/apply_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入联系方式"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="@color/line" />

            <LinearLayout
                android:layout_marginTop="24px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="活动要求:"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24px"
                    android:layout_marginTop="24px"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_title"
                        android:layout_width="246px"
                        android:layout_height="184px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/apply_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="2"
                            android:textColor="@color/black_333333"
                            android:textSize="30px" />

                        <TextView
                            android:id="@+id/apply_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12px"
                            android:textColor="@color/black_333333"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12px"
                            android:textColor="@color/black_333333"
                            android:textSize="28px" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别要求:"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年         龄:"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24px"
                    android:layout_marginTop="24px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否单身:"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/issingle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/apply_ll_is_noname"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="是否匿名:"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/apply_is_noname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical|end"
                    android:maxLength="30"
                    android:text="否"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="费        用:"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/apply_cost_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical|end"
                    android:maxLength="30"
                    android:text="¥888.00元/人"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/apply_num_ll"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:textColor="@color/black_333333"
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="报名人数:"
                    android:textSize="28px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_jian"
                        android:layout_width="56px"
                        android:layout_height="56px"
                        android:src="@mipmap/jian" />

                    <TextView
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/bg_apply"
                        android:id="@+id/tv_num"
                        android:layout_width="120px"
                        android:layout_height="56px"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_jia"
                        android:layout_width="56px"
                        android:layout_height="56px"
                        android:src="@mipmap/jia" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/apply_vessel_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/apply_pay_ll"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="40px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140px"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="支付方式:"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_pay_decs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="44px"
                        android:gravity="center_vertical"
                        android:maxLength="30"
                        android:text="现场支付"
                        android:textColor="@color/black_333333"
                        android:textSize="28px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12px"
                    android:background="@color/line" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:visibility="visible"
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow_ff9d00"
        android:gravity="center"
        android:text="报名"
        android:textColor="@color/white_ffffff"
        android:textSize="36px" />

    <LinearLayout
        android:id="@+id/ll_pay"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="88px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">

            <TextView
                android:textSize="30px"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="26px"
                android:text="合计金额: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/all_price"
                android:textSize="30px"
                android:layout_gravity="center_vertical"
                android:textColor="#F71F1F"
                android:layout_marginLeft="26px"
                android:text="¥888.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/online_pay"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_alignParentBottom="true"
            android:background="@color/yellow_ff9d00"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/white_ffffff"
            android:textSize="36px" />
        
    </LinearLayout>

</RelativeLayout>
