<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="30px"
        android:id="@+id/rl_tuijian_huodong_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.library.banner.BannerLayout
            app:orientation="horizontal"
            android:layout_centerInParent="true"
            android:id="@+id/recyclerbanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white_ffffff"
        android:id="@+id/ll_live"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="20px"
            android:textSize="35px"
            android:id="@+id/tv_text_youju"
            android:layout_marginTop="20px"
            android:textStyle="bold"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="20px"
            android:text="队长在线"
            android:textColor="@color/black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginBottom="18px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:id="@+id/rv_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="18px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:id="@+id/rv_home_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#d1d1d1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="3px"/>
        <TextView
            android:background="#FAFAFA"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_centerInParent="true"
            android:textSize="36px"
            android:visibility="visible"
            android:id="@+id/tv_text_youji"
            android:textStyle="bold"
            android:layout_marginLeft="5px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="30px"
            android:text="友记文章"
            android:textColor="@color/black_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:id="@+id/rv_home_1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
