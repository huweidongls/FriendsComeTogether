<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/activity_team_intercalation_rv_tv_title"
        android:layout_marginLeft="40px"
        android:layout_marginTop="40px"
        android:textColor="@color/black_333333"
        android:textSize="32px"
        android:text="队友的插文，想说什么就说什么呗！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_team_intercalation_rv_iv"
            android:scaleType="centerCrop"
            android:layout_marginLeft="40px"
            android:layout_width="300px"
            android:layout_height="200px" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:id="@+id/activity_team_intercalation_rv_iv_avatar"
            android:layout_toRightOf="@+id/activity_team_intercalation_rv_iv"
            android:layout_width="80px"
            android:layout_height="80px" />

        <TextView
            android:layout_marginLeft="10px"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@+id/activity_team_intercalation_rv_iv_avatar"
            android:id="@+id/activity_team_intercalation_rv_tv_nickname"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:text="昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/activity_team_intercalation_rv_iv"
            android:layout_below="@+id/activity_team_intercalation_rv_iv_avatar"
            android:id="@+id/activity_team_intercalation_rv_tv_c_time"
            android:textColor="@color/black_333333"
            android:textSize="28px"
            android:text="发布时间：2018-03-30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <TextView
        android:background="@drawable/bg_dialog_price_select"
        android:id="@+id/activity_team_intercalation_rv_tv_state"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:textSize="28px"
        android:textColor="@color/black_333333"
        android:text="待审核"
        android:layout_width="172px"
        android:layout_height="64px" />

    <RelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:id="@+id/activity_team_intercalation_rv_ll_show"
            android:layout_toLeftOf="@+id/activity_team_intercalation_rv_ll_shield"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/show"
                android:layout_width="31px"
                android:layout_height="23px" />

            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:textColor="@color/black_333333"
                android:text="允许展示"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            android:id="@+id/activity_team_intercalation_rv_ll_shield"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shield"
                android:layout_width="24px"
                android:layout_height="24px" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4px"
                android:textColor="@color/black_333333"
                android:textSize="24px"
                android:text="屏蔽"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>
    
    <View
        android:layout_marginTop="30px"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="12px"/>

</LinearLayout>
