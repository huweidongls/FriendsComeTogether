<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    tools:context="com.yiwo.friendscometogether.newpage.MessageActivity">

    <RelativeLayout
        style="@style/rl_top_bar"
        android:layout_height="90px">

        <RelativeLayout
            android:id="@+id/rl_back"
            style="@style/rl_return">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

        <TextView
            style="@style/tv_top_title"
            android:text="消息中心"
             />

    </RelativeLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="195px">

        <RelativeLayout
            android:id="@+id/rl_z_and_sc"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="63px"
                    android:layout_height="62px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/zan_and_shoucang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25px"
                    android:text="赞和收藏"
                    android:textColor="@color/black_333333"
                    android:textSize="28px" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shoudaoyaoqing"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/shoudaoyaoqing"
                    android:layout_width="72px"
                    android:layout_height="69px" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25px"
                    android:textSize="28px"
                    android:textColor="@color/black_333333"
                    android:text="收到邀请"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pinglun"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/pingluna"
                    android:layout_width="63px"
                    android:layout_height="62px" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25px"
                    android:textSize="28px"
                    android:textColor="@color/black_333333"
                    android:text="评论和@"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_tongzhi_message"
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="141px">

        <ImageView
            android:id="@+id/iv1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:src="@mipmap/tongzhixiaoxi"
            android:layout_width="82px"
            android:layout_height="82px" />

        <TextView
            android:id="@+id/tv1"
            android:layout_alignTop="@+id/iv1"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv1"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="通知消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/ll1"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="8px"
            android:layout_alignLeft="@+id/tv1"
            android:layout_below="@+id/tv1"
            android:textColor="#5C5C5C"
            android:textSize="28px"
            android:text="西湖断桥一年只有十天的拍照圣地，错…"
            android:id="@+id/tv1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_marginTop="30px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tongzhi_time"
                android:textColor="#9A9A9A"
                android:textSize="24px"
                android:text="12: 01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="30px"
                android:layout_gravity="right"
                android:id="@+id/iv_hot1"
                android:layout_width="20px"
                android:layout_height="20px"
                android:background="@drawable/bg_red" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hot_message"
        android:layout_marginTop="20px"
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="141px">

        <ImageView
            android:id="@+id/iv2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:src="@mipmap/remenxiaoxi"
            android:layout_width="82px"
            android:layout_height="82px" />

        <TextView
            android:id="@+id/tv2"
            android:layout_alignTop="@+id/iv2"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv2"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="热门消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/ll2"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="8px"
            android:layout_alignLeft="@+id/tv2"
            android:layout_below="@+id/tv2"
            android:textColor="#5C5C5C"
            android:textSize="28px"
            android:text="西湖断桥一年只有十天的拍照圣地，错…"
            android:id="@+id/tv2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_marginTop="30px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_remen_time"
                android:textColor="#9A9A9A"
                android:textSize="24px"
                android:text="12: 01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="30px"
                android:layout_gravity="right"
                android:id="@+id/iv_hot2"
                android:layout_width="20px"
                android:layout_height="20px"
                android:background="@drawable/bg_red" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_private_message"
        android:layout_marginTop="20px"
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="141px">

        <ImageView
            android:id="@+id/iv3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:src="@mipmap/sixinxiaoxi"
            android:layout_width="82px"
            android:layout_height="82px" />

        <TextView
            android:id="@+id/tv3"
            android:layout_alignTop="@+id/iv3"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv3"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="私信消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/ll3"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="8px"
            android:layout_alignLeft="@+id/tv3"
            android:layout_below="@+id/tv3"
            android:textColor="#5C5C5C"
            android:textSize="28px"
            android:text="成功与“我是你们的学霸姐”配对啦!"
            android:id="@+id/tv3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_marginTop="30px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sixin_time"
                android:textColor="#9A9A9A"
                android:textSize="24px"
                android:text="12: 01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="30px"
                android:layout_gravity="right"
                android:id="@+id/iv_hot3"
                android:layout_width="20px"
                android:layout_height="20px"
                android:background="@drawable/bg_red" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_friend_message"
        android:layout_marginTop="20px"
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="141px">

        <ImageView
            android:id="@+id/iv4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:src="@mipmap/friend"
            android:layout_width="82px"
            android:layout_height="82px" />

        <TextView
            android:id="@+id/tv4"
            android:layout_alignTop="@+id/iv4"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv4"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="好友消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/ll4"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="8px"
            android:layout_alignLeft="@+id/tv4"
            android:layout_below="@+id/tv4"
            android:textColor="#5C5C5C"
            android:textSize="28px"
            android:text="成功与“我是你们的学霸姐”配对啦!"
            android:id="@+id/tv4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_marginTop="30px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_friend_time"
                android:textColor="#9A9A9A"
                android:textSize="24px"
                android:text="12: 01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="30px"
                android:layout_gravity="right"
                android:id="@+id/iv_hot4"
                android:layout_width="20px"
                android:layout_height="20px"
                android:background="@drawable/bg_red" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
