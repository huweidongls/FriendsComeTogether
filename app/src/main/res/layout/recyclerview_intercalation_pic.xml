<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_create_intercalation_rv_rl_add"
        android:background="@drawable/bg_dialog_content"
        android:layout_marginTop="18px"
        android:layout_marginRight="15px"
        android:layout_marginLeft="15px"
        android:layout_centerHorizontal="true"
        android:layout_width="200px"
        android:layout_height="200px">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/add_image"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/activity_create_intercalation_rv_tv_img_num"
            android:layout_marginTop="5px"
            android:layout_marginRight="5px"
            android:layout_alignParentRight="true"
            android:textSize="18px"
            android:text="0/9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/activity_create_intercalation_rv_rl_img"
        android:layout_marginTop="18px"
        android:layout_centerHorizontal="true"
        android:layout_width="200px"
        android:layout_height="200px">

        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
            test:radius1="18px"
            android:id="@+id/activity_create_intercalation_rv_iv_img"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textColorHint="@color/white_ffffff"
            android:hint="编辑图片描述"
            android:lines="1"
            android:ellipsize="end"
            android:padding="3px"
            android:id="@+id/activity_create_intercalation_rv_tv_content"
            android:textColor="@color/white_ffffff"
            android:gravity="center"
            android:textSize="20px"
            android:background="#449CFA"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="-17px"
        android:layout_toRightOf="@+id/activity_create_intercalation_rv_rl_img"
        android:id="@+id/activity_create_intercalation_rv_iv_delete"
        android:src="@mipmap/delete"
        android:layout_width="35px"
        android:layout_height="35px" />
    <RelativeLayout
        android:id="@+id/rl_is_first"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5px"
        android:background="@drawable/bg_black_trans"
        android:layout_width="50px"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="20px"
            android:textColor="@color/white_ffffff"
            android:text="首图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
