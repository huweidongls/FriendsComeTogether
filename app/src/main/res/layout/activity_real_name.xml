<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.pages.RealNameActivity">

    <RelativeLayout
        android:id="@+id/activity_real_name_rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:text="实名认证"
            style="@style/tv_top_title" />
        
        <RelativeLayout
            android:id="@+id/activity_real_name_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_above="@+id/activity_real_name_rl_complete"
        android:layout_below="@+id/activity_real_name_rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/activity_real_name_rl_name"
            android:layout_marginTop="50px"
            android:layout_centerHorizontal="true"
            android:layout_width="600px"
            android:layout_height="40px">

            <TextView
                android:id="@+id/activity_real_name_tv_name"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:text="姓        名:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <View
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/activity_real_name_tv_name"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <EditText
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/activity_real_name_tv_name"
                android:gravity="center_vertical"
                android:background="@null"
                android:id="@+id/activity_real_name_et_name"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/activity_real_name_rl_idnum"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_real_name_rl_name"
            android:layout_marginTop="26px"
            android:layout_width="600px"
            android:layout_height="40px">

            <TextView
                android:id="@+id/activity_real_name_tv_idnum"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:text="身份证号:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/activity_real_name_tv_idnum"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <EditText
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/activity_real_name_tv_idnum"
                android:gravity="center_vertical"
                android:background="@null"
                android:id="@+id/activity_real_name_et_idnum"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_real_name_rl_sign"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_real_name_rl_idnum"
            android:layout_marginTop="26px"
            android:layout_width="600px"
            android:layout_height="40px">

            <TextView
                android:id="@+id/activity_real_name_tv_sign"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:text="签证机关:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/activity_real_name_tv_sign"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="2px"/>

            <EditText
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/activity_real_name_tv_sign"
                android:gravity="center_vertical"
                android:background="@null"
                android:id="@+id/activity_real_name_et_sign"
                android:textSize="28px"
                android:textColor="@color/black_333333"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/activity_real_name_tv_uploadid"
            android:layout_marginTop="40px"
            android:layout_below="@+id/activity_real_name_rl_sign"
            android:layout_centerHorizontal="true"
            android:textColor="#626262"
            android:textSize="28px"
            android:text="拍摄/上传您的身份证"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginRight="75px"
            android:layout_marginLeft="75px"
            android:layout_above="@+id/activity_real_name_ll"
            android:layout_below="@+id/activity_real_name_tv_uploadid"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_real_name_rl_id_1"
                android:background="@color/white_ffffff"
                android:elevation="4px"
                android:layout_marginBottom="26px"
                android:layout_marginTop="19px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="180px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/taker_photo"
                        android:layout_width="180px"
                        android:layout_height="180px" />

                    <TextView
                        android:layout_marginTop="20px"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#626262"
                        android:textSize="28px"
                        android:text="身份证正面"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/activity_real_name_iv_id_1"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_real_name_rl_id_2"
                android:background="@color/white_ffffff"
                android:elevation="4px"
                android:layout_marginBottom="17px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0px">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="180px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/taker_photo"
                        android:layout_width="180px"
                        android:layout_height="180px" />

                    <TextView
                        android:layout_marginTop="20px"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#626262"
                        android:textSize="28px"
                        android:text="身份证反面"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/activity_real_name_iv_id_2"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_real_name_ll"
            android:layout_marginBottom="16px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#FF0000"
                android:textSize="20px"
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#CACACA"
                android:textSize="20px"
                android:text="个人私密信息不对外公开"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_real_name_rl_complete"
        android:background="#FF9D00"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="98px">

        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/white_ffffff"
            android:textSize="30px"
            android:text="提交"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
