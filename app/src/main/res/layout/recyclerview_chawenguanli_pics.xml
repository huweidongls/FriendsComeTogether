<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
            android:id="@+id/iv_pic"
            test:radius1="18px"
            android:layout_width="match_parent"
            android:layout_height="176px"
            android:layout_marginRight="3.5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_head" />
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_alignBottom="@+id/iv_pic"
            android:background="@drawable/bg_black_18px_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv"
                android:textColor="@color/white_ffffff"
                android:layout_centerHorizontal="true"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
