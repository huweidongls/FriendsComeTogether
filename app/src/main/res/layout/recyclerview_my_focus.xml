<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_my_focus_rv_iv_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_width="200px"
            android:layout_height="200px" />

        <LinearLayout
            android:layout_marginLeft="18px"
            android:layout_toLeftOf="@+id/activity_my_focus_rv_tv_2"
            android:layout_toRightOf="@+id/activity_my_focus_rv_iv_avatar"
            android:orientation="vertical"
            android:layout_marginTop="42px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_my_focus_rv_tv_nickname"
                    android:gravity="start"
                    android:textColor="@color/black_333333"
                    android:textSize="28px"
                    android:text="昵称：帅气的小迷糊"
                    android:layout_width="274px"
                    android:layout_height="40px" />
                
                <ImageView
                    android:id="@+id/activity_my_focus_rv_iv_sex"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/nan"
                    android:layout_width="30px"
                    android:layout_height="30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="22px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/article_focus"
                    android:layout_width="24px"
                    android:layout_height="24px" />
                
                <TextView
                    android:id="@+id/activity_my_focus_rv_tv_article_num"
                    android:gravity="center"
                    android:layout_marginLeft="6px"
                    android:textColor="@color/black_333333"
                    android:textSize="24px"
                    android:text="文章：45"
                    android:layout_width="wrap_content"
                    android:layout_height="33px" />
                
                <ImageView
                    android:layout_marginLeft="22px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/heart_blue"
                    android:layout_width="32px"
                    android:layout_height="28px" />
                
                <TextView
                    android:id="@+id/activity_my_focus_rv_tv_like_num"
                    android:gravity="center"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="8px"
                    android:textColor="@color/black_333333"
                    android:textSize="24px"
                    android:text="粉丝：2989"
                    android:layout_width="wrap_content"
                    android:layout_height="33px" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="22px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/stopwatch"
                    android:layout_width="26px"
                    android:layout_height="26px" />
                
                <TextView
                    android:id="@+id/activity_my_focus_rv_tv_activity_id"
                    android:layout_marginLeft="8px"
                    android:gravity="center"
                    android:textSize="24px"
                    android:textColor="@color/black_333333"
                    android:text="活动状态：活动结束"
                    android:layout_width="wrap_content"
                    android:layout_height="33px" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:background="@drawable/bg_activity_my_focus_focus"
            android:id="@+id/activity_my_focus_rv_tv_2"
            android:layout_marginRight="20px"
            android:layout_marginBottom="36px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="24px"
            android:textColor="@color/white_ffffff"
            android:text="邀请Ta"
            android:layout_width="140px"
            android:layout_height="50px" />

        <TextView
            android:background="@drawable/bg_activity_my_focus_focus"
            android:layout_marginBottom="14px"
            android:layout_above="@+id/activity_my_focus_rv_tv_2"
            android:id="@+id/activity_my_focus_rv_tv_1"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="24px"
            android:textColor="@color/white_ffffff"
            android:text="取消关注"
            android:layout_width="140px"
            android:layout_height="50px" />

    </RelativeLayout>
    
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="20px"/>

</LinearLayout>
