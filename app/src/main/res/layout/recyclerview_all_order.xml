<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_30px"
    android:paddingBottom="10px"
    android:layout_marginTop="20px"
    android:layout_marginLeft="23px"
    android:layout_marginRight="23px">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10px"
        android:layout_height="78px">

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_title"
            android:layout_marginLeft="26px"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="26px"
            android:text="云南旅游"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_status"
            android:layout_marginRight="26px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#D84C37"
            android:textSize="26px"
            android:text="待付款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_all_order_rv_rl_details"
        android:layout_width="match_parent"
        android:layout_height="180px">

        <ImageView
            android:layout_marginLeft="24px"
            android:id="@+id/fragment_all_order_rv_iv"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_width="180px"
            android:layout_height="180px" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/fragment_all_order_rv_iv"
            android:layout_marginLeft="20px"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/fragment_all_order_rv_iv"
            android:layout_width="wrap_content"
            android:layout_height="180px">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_start_time"
                android:textColor="#999999"
                android:textSize="24px"
                android:text="开始时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_end_time"
                android:textColor="#999999"
                android:textSize="24px"
                android:text="结束时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="24px"
                android:id="@+id/tv_people_num"
                android:text="参加人数："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="24px"
                android:id="@+id/tv_noname"
                android:text="是否匿名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:visibility="gone"
            android:id="@+id/fragment_all_order_rv_tv_price_details"
            android:layout_marginLeft="26px"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            android:textSize="26px"
            android:text="自费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_price"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:textColor="@color/yellow_ff9d00"
            android:textSize="24px"
            android:text="合计费用：¥8888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btns"
        android:paddingRight="10px"
        android:layout_width="match_parent"
        android:layout_height="86px">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_cancle_trip"
                android:background="@drawable/bg_gray_border_27px"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="#686868"
                android:text="取消活动"
                android:layout_width="150px"
                android:layout_height="54px" />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_delete_trip"
                android:background="@drawable/bg_gray_border_27px"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="#686868"
                android:text="删除"
                android:layout_width="150px"
                android:layout_height="54px" />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_to_trip"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="进行中"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_triping"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="活动中"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_comment"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:text="评价"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_payment"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:text="付款"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_ok_return"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="已退款"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px" />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_returning"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="退款中"
                 />

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_niming_staus"
        android:textSize="26px"
        android:textColor="@color/black_333333"
        android:layout_marginRight="20px"
        android:lines="1"
        android:layout_gravity="right"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
