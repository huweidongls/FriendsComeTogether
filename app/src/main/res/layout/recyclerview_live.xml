<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll"
        android:background="@drawable/bg_d2d2d2_border_20px"
        android:layout_margin="10px"
        android:orientation="vertical"
        android:layout_width="240px"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@mipmap/live_list_icon_bg"
            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal"
            android:layout_width="170px"
            android:layout_height="170px">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_centerInParent="true"
                android:src="@mipmap/my_head"
                android:layout_width="145px"
                android:layout_height="145px" />
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/live_list_state"
                android:layout_width="106px"
                android:layout_height="40px">
                <TextView
                    android:id="@+id/tv_live_state"
                    android:textStyle="bold"
                    android:text="直播中"
                    android:textSize="21px"
                    android:textColor="@color/white_ffffff"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_address"
            android:ellipsize="end"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="5px"
            android:textStyle="bold"
            android:text="地点：巴厘岛"
            android:textSize="24px"
            android:textColor="@color/black_333333"
            android:layout_gravity="center_horizontal"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_live_person"
            android:ellipsize="end"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="5px"
            android:textStyle="bold"
            android:text="小新带队"
            android:textSize="24px"
            android:textColor="@color/black_333333"
            android:layout_gravity="center_horizontal"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_gaunzhu"
            android:layout_marginBottom="30px"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25px"
            android:text="关注"
            android:textColor="@color/white_ffffff"
            android:layout_marginTop="10px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_red_26px"
            android:layout_width="150px"
            android:layout_height="40px" />
    </LinearLayout>
</LinearLayout>
