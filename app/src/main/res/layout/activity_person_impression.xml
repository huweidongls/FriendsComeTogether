<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.friendscometogether.newpage.PersonImpressionActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">
        <RelativeLayout
            android:id="@+id/rl_back"
            style="@style/rl_return">

            <ImageView
                android:id="@+id/btn_back"
                style="@style/iv_return"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:text="Ta的印象"
            style="@style/tv_top_title" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:layout_gravity="right"
                android:layout_marginTop="55px"
                android:background="@drawable/bg_red_left_35px"
                android:visibility="visible">
                <LinearLayout
                    android:paddingLeft="15px"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/ll_mashanglianxi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15px"
                        android:src="@mipmap/mashanglianxi_icon"
                        android:layout_width="40px"
                        android:layout_height="40px" />
                    <View
                        android:id="@+id/view_line"
                        android:layout_toRightOf="@+id/ll_mashanglianxi"
                        android:background="@color/white"
                        android:layout_marginBottom="12px"
                        android:layout_marginTop="12px"
                        android:layout_width="2px"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="15px"
                    android:paddingRight="40px"
                    android:layout_toRightOf="@+id/ll_mashanglianxi"
                    android:id="@+id/rl_algin_right_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="38px"
                        android:layout_height="38px"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/xindong" />

                    <TextView
                        android:id="@+id/tv_xindong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15px"
                        android:layout_toRightOf="@+id/iv_heart"
                        android:text="心动女生"
                        android:textColor="@color/white_ffffff"
                        android:textSize="30px"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>
            <FrameLayout
                android:id="@+id/rl_show_impresson"
                android:layout_width="match_parent"
                android:layout_height="650px">

                <ImageView
                    android:id="@+id/iv_head_bg"
                    android:layout_width="320px"
                    android:layout_height="320px"
                    android:layout_gravity="center"
                    android:src="@mipmap/impresson_head_bg" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="205px"
                    android:layout_height="205px"
                    android:layout_gravity="center"
                    android:src="@mipmap/guide1" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="220px"
                    android:layout_marginLeft="70px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="33px"
                            android:layout_height="33px"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/impresson_round_big" />

                        <TextView
                            android:id="@+id/tv0"
                            android:maxLength="8"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8px"
                            android:textColor="@color/black_333333"
                            android:textSize="25px" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="178px"
                        android:layout_height="65px"
                        android:layout_marginBottom="5px"
                        android:src="@mipmap/impresson_right_1" />
                </LinearLayout>
                <!--5-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="60px"
                    android:layout_marginLeft="275px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5px"
                        android:layout_marginLeft="30px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="33px"
                            android:layout_height="33px"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/impresson_round_big" />

                        <TextView
                            android:id="@+id/tv4"
                            android:maxLength="8"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8px"
                            android:textColor="@color/black_333333"
                            android:textSize="25px" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="171px"
                        android:layout_height="57px"
                        android:layout_marginBottom="5px"
                        android:src="@mipmap/impresson_right_2" />
                </LinearLayout>

                <!--2-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="165px"
                    android:layout_marginRight="225px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="33px"
                            android:layout_height="33px"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/impresson_round_big" />

                        <TextView
                            android:id="@+id/tv1"
                            android:maxLength="8"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8px"
                            android:textColor="@color/black_333333"
                            android:textSize="25px" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="191px"
                        android:layout_height="61px"
                        android:layout_marginBottom="5px"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/impresson_left_1" />
                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/lay3"
                    android:layout_marginTop="100px"
                    android:layout_marginRight="250px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="191px"
                        android:layout_height="49px"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/impresson_left_2" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="33px"
                            android:layout_height="33px"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/impresson_round_big" />

                        <TextView
                            android:id="@+id/tv3"
                            android:maxLength="8"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8px"
                            android:textColor="@color/black_333333"
                            android:textSize="25px" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/lay2"
                    android:layout_marginTop="190px"
                    android:layout_marginLeft="230px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="164px"
                        android:layout_height="93px"
                        android:src="@mipmap/impresson_right_3" />
                    <LinearLayout
                        android:layout_marginTop="40px"
                        android:layout_marginLeft="50px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="33px"
                            android:layout_height="33px"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/impresson_round_big" />

                        <TextView
                            android:id="@+id/tv2"
                            android:maxLength="8"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black_333333"
                            android:textSize="25px" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay7"
                    android:layout_marginLeft="160px"
                    android:layout_marginBottom="150px"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/impresson_round_small" />

                    <TextView
                        android:id="@+id/tv7"
                        android:maxLength="8"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="20px" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay5"
                    android:layout_marginBottom="60px"
                    android:layout_marginRight="220px"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/impresson_round_small" />

                    <TextView
                        android:id="@+id/tv5"
                        android:maxLength="8"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="20px" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay6"
                    android:layout_marginTop="180px"
                    android:layout_marginRight="80px"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/impresson_round_small" />

                    <TextView
                        android:id="@+id/tv6"
                        android:maxLength="8"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="20px" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay8"
                    android:layout_marginTop="85px"
                    android:layout_marginLeft="220px"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/impresson_round_small" />

                    <TextView
                        android:id="@+id/tv8"
                        android:maxLength="8"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="20px" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lay9"
                    android:layout_marginRight="280px"
                    android:layout_marginTop="220px"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="33px"
                        android:layout_height="33px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/impresson_round_big" />

                    <TextView
                        android:id="@+id/tv9"
                        android:maxLength="8"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="25px" />
                </LinearLayout>
            </FrameLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginBottom="30px"
                android:id="@+id/rv_person_impression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.yiwo.friendscometogether.widget.NestedRecyclerView
                android:id="@+id/rv_impresson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
