<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.pages.LookHistoryActivity">

    <RelativeLayout
        android:id="@+id/activity_look_history_rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:text="浏览历史"
            style="@style/tv_top_title" />
        
        <RelativeLayout
            android:id="@+id/activity_look_history_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/activity_look_history_clear"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <TextView
                android:textSize="30px"
                android:layout_centerInParent="true"
                android:text="清空"
                android:textColor="@color/white_ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <!--<com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView-->
        <!--android:id="@+id/activity_look_history_rv"-->
        <!--android:layout_below="@+id/activity_look_history_rl_top"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_look_history_rv"
        android:layout_below="@+id/activity_look_history_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
