<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/param_layout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="132dp"
    android:layout_marginRight="15dp"
    tools:showIn="@layout/fragment_take_video_new">
    <RelativeLayout
        android:layout_marginBottom="3dp"
        android:id="@+id/rl_action"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_gray_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white_ffffff"
            android:text="注意：设置视频时长，小于设置的视频时长，将不会被加载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/ic_gray_bg"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_action"
        android:layout_width="126dp"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="高清"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/first_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/mode"
            android:text="•"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/first_split"
            android:text="3段"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/second_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/counts"
            android:text="•"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/second_split"
            android:text="30秒"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>