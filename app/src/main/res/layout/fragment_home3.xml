<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_top"
        android:paddingTop="50px"
        android:elevation="5px"
        android:layout_marginBottom="5px"
        android:background="@color/red_d84c37"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:visibility="gone"
            android:id="@+id/fragment_home_banner"
            android:layout_width="match_parent"
            android:layout_height="400px">
        </com.youth.banner.Banner>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--隐藏友记标签列表-->
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="30px"
                android:layout_marginTop="50px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_home_youji_lvxing"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="70px"
                        android:layout_height="63px" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textSize="26px"
                        android:textColor="@color/black_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_youji_meishi"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="70px"
                        android:layout_height="63px" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textSize="26px"
                        android:textColor="@color/black_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_youji_tandian"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="70px"
                        android:layout_height="63px" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textSize="26px"
                        android:textColor="@color/black_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_youji_gonglue"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="70px"
                        android:layout_height="63px" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textSize="26px"
                        android:textColor="@color/black_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_youji_all"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/quanbu"
                        android:layout_width="70px"
                        android:layout_height="63px" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textSize="26px"
                        android:textColor="@color/black_333333"
                        android:text="全部"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="30px"
                android:padding="8px"
                android:layout_centerVertical="true"
                android:id="@+id/locationRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10px"
                        android:src="@mipmap/home_loc_1"
                        android:layout_width="50px"
                        android:layout_height="50px" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_city_name"
                        android:textColor="@color/white_ffffff"
                        android:textSize="32px"
                        android:text="所在位置：哈尔滨"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <!--tv_weiduxiaoxi-->
            <LinearLayout
                android:layout_toLeftOf="@+id/rl_xiaoxi"
                android:layout_marginBottom="5px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_search"
                    android:layout_width="65px"
                    android:layout_height="65px"
                    android:layout_marginLeft="20px"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView2"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:src="@mipmap/serach_white" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_xiaoxi"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:layout_width="80px"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="8px"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_msg"
                        android:src="@mipmap/home_xiaoxi"
                        android:layout_width="50px"
                        android:layout_height="50px" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_xiaoxi_num"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_oval_white"
                    android:layout_width="30px"
                    android:layout_height="30px">
                    <TextView
                        android:id="@+id/tv_weiduxiaoxi"
                        android:layout_centerInParent="true"
                        android:textColor="@color/red_d84c37"
                        android:text="1"
                        android:textSize="22px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="160px">
            <LinearLayout

                android:id="@+id/ll_tab"
                android:layout_marginTop="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130px">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_rl1"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_333333"
                        android:textSize="58px"
                        android:textStyle="bold"
                        android:text="推荐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_rl2"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="#999999"
                        android:textSize="50px"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_rl3"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="#999999"
                        android:textSize="50px"
                        android:text="友记"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="#999999"
                        android:id="@+id/tv_rl4"
                        android:layout_centerInParent="true"
                        android:textSize="50px"
                        android:text="视频"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
                <View
                    android:background="@color/red_d84c37"
                    android:layout_width="match_parent"
                    android:layout_height="35px"/>
                <LinearLayout
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/sanjiao_down"
                            android:visibility="visible"
                            android:id="@+id/v1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="100px"
                            android:layout_height="100px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/sanjiao_down"
                            android:visibility="gone"
                            android:id="@+id/v2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="100px"
                            android:layout_height="100px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/sanjiao_down"
                            android:visibility="gone"
                            android:id="@+id/v3"
                            android:layout_centerHorizontal="true"
                            android:layout_width="100px"
                            android:layout_height="100px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/sanjiao_down"
                            android:visibility="gone"
                            android:id="@+id/v4"
                            android:layout_centerHorizontal="true"
                            android:layout_width="100px"
                            android:layout_height="100px"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@+id/ll_top"
        android:id="@+id/home_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yiwo.friendscometogether.widget.ScrollListenScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.yiwo.friendscometogether.widget.ViewPagerForScrollView
                        android:visibility="visible"
                        android:id="@+id/vp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>

        </com.yiwo.friendscometogether.widget.ScrollListenScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_ball"
        android:layout_marginBottom="200px"
        android:layout_alignParentRight="true"
        android:background="@mipmap/home_renwu"
        android:layout_alignParentBottom="true"
        android:layout_width="150px"
        android:layout_height="150px">
        <!--<TextView-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="32px"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:textColor="@color/white_ffffff"-->
            <!--android:text="任务"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </RelativeLayout>
</RelativeLayout>
