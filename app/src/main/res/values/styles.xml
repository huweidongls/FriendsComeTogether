<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--顶部标题样式-->
    <style name="tv_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--顶部bar样式
    <RelativeLayout-->
    <style name="rl_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">#d84c37</item>
    </style>
    <!--返回图片样式-->
    <style name="iv_return">
        <item name="android:layout_width">16px</item>
        <item name="android:layout_height">26px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/back_w</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
    </style>
    <!--返回RelativeLayout样式-->
    <style name="rl_return">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--全屏加透明-->
    <style name="TranslucentFullScreenTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/translate</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--分割线样式-->
    <style name="v_split">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/black_f8f8f8</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  控制popuWindow显示和隐藏 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophiden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <style name="popwindow_anim_left_in_out">
        <item name="android:windowEnterAnimation">@anim/pophiden_anim_left_in</item>
        <item name="android:windowExitAnimation">@anim/pophiden_anim_left_out</item>
    </style>
    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!--日期时间选择器-->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="music_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/mix_music_btn_bg_select</item>
    </style>
    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">19sp</item>
    </style>
    <!-- 直播 -->
    <style name="MediaController_Text">
        <item name="android:textColor">#7fffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/nemediacontroller_progressbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="btn_switch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="quality_select_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="control_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="share_btn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@drawable/share_type_text_selector</item>
        <item name="android:background">@drawable/share_type_bg_selector</item>
    </style>

    <style name="InputActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_activity_blue_bg</item>
        <item name="colorPrimaryDark">@color/color_activity_blue_bg</item>
        <item name="colorAccent">#346fc3</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
    </style>
    <style name="animation_translucent_translate" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
    </style>
</resources>
